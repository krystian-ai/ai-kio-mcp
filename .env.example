# MCP-KIO Configuration
# Copy this file to .env and adjust values as needed

# Server Configuration
MCP_KIO_SERVER_NAME=mcp-kio
MCP_KIO_SERVER_VERSION=0.1.0

# Logging
# Options: debug, info, warn, error
MCP_KIO_LOG_LEVEL=info

# Cache Configuration
# Options: memory, redis
MCP_KIO_CACHE_TYPE=memory

# Redis Configuration (only used when CACHE_TYPE=redis)
MCP_KIO_REDIS_URL=redis://localhost:6379

# Cache TTL (in milliseconds)
MCP_KIO_SEARCH_CACHE_TTL_MS=900000
MCP_KIO_JUDGMENT_CACHE_TTL_MS=604800000

# Rate Limiting (requests per minute per client)
MCP_KIO_SEARCH_RATE_LIMIT=60
MCP_KIO_JUDGMENT_RATE_LIMIT=20

# Provider URLs
MCP_KIO_SAOS_BASE_URL=https://www.saos.org.pl
MCP_KIO_UZP_BASE_URL=https://orzeczenia.uzp.gov.pl

# HTTP Configuration
MCP_KIO_REQUEST_TIMEOUT_MS=30000

# HTTP Server (for http transport)
MCP_KIO_HTTP_PORT=3000
MCP_KIO_HTTP_HOST=127.0.0.1
